#!/usr/bin/env node

const { join } = require('path');
const { copy, remove } = require('fs-extra');
const arg = require('arg');
const chalk = require('chalk');
const { npxSync: npx } = require('node-npx');
const log = require('./logger');

const args = arg({
  '--help': Boolean,
  '--version': Boolean,
  '--all': Boolean,
  '--win': Boolean,
  '--mac': Boolean,
  '--linux': Boolean,
  '--x64': Boolean,
  '--ia32': Boolean,
  '--armv7l': Boolean,
  '--arm64': Boolean,
  '-h': '--help',
  '-v': '--version',
  '-w': '--win',
  '-m': '--mac',
  '-l': '--linux',
});

if (args['--help']) {
  console.log(chalk`
    {bold.cyan nextron build} - Build and export the application for production deployment

    {bold USAGE}

      {bold $} {cyan nextron build} --help
      {bold $} {cyan nextron build} [options]

    {bold OPTIONS}

      --help,    -h  shows this help message
      --version, -v  displays the current version of nextron
      --all          builds for Windows, macOS and Linux
      --win,     -w  builds for Windows, accepts target list (see https://goo.gl/jYsTEJ)
      --mac,     -m  builds for macOS, accepts target list (see https://goo.gl/5uHuzj)
      --linux,   -l  builds for Linux, accepts target list (see https://goo.gl/4vwQad) 
      --x64          builds for x64
      --ia32         builds for ia32
      --armv7l       builds for armv7l
      --arm64        builds for arm64
  `);
  process.exit(0);
}

const cwd = process.cwd();
const spawnOptions = {
  cwd,
  stdio: 'inherit',
};

async function build(args) {
  // Ignore missing dependencies
  process.env.ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES = 'true';

  try {
    log('Clearing previous builds');
    await remove(join(cwd, 'app'));
    await remove(join(cwd, 'dist'));
    await remove(join(cwd, 'renderer', '.next'));

    log('Building renderer process');
    const outdir = join(cwd, 'renderer/out');
    const appdir = join(cwd, 'app');
    await npx('next', ['build', join(cwd, 'renderer')], spawnOptions);
    await npx('next', ['export', join(cwd, 'renderer')], spawnOptions);
    await copy(outdir, appdir);
    await remove(outdir);

    log('Building main process');
    await npx('node', [join(__dirname, 'webpack', 'build.production.js')], spawnOptions);
    
    if (args['--all'] || args['--win'] || args['--mac'] || args['--linux']) {
      log('Packaging - please wait a moment');
      await npx('electron-builder', createBuilderArgs(args), spawnOptions);
    } else {
      log('Skipping packaging - provide --all or any platform specification arguments if you want to package');
    }

    log('See `dist` directory');
  } catch (err) {
    console.log(chalk`

{bold.red Cannot build electron packages:}
{bold.yellow ${err}}
`);
    process.exit(1);
  }
}

function createBuilderArgs(args) {
  let results = [];
  if (args['--all']) {
    results.push('-wml');
    results.push(...createArchArgs(args));
  } else {
    args['--win'] && results.push('--win');
    args['--mac'] && results.push('--mac');
    args['--linux'] && results.push('--linux');
    results.push(...createArchArgs(args));
  }
  return results;
}

function createArchArgs(args) {
  let archArgs = [];
  args['--x64'] && archArgs.push('--x64');
  args['--ia32'] && archArgs.push('--ia32');
  args['--armv7l'] && archArgs.push('--armv7l');
  args['--arm64'] && archArgs.push('--arm64');
  return archArgs;
}

build(args);
