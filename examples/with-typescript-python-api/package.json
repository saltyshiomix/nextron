    "build": "npm run build-python && npm run build-nextron",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "Nextron",
    "Electron",
    "NextJS",
    "Python",
    "Flask",
    "demo"
  ],
  "dependencies": {
    "cross-spawn": "^7.0.3",
