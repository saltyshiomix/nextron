    "@babel/core": "^7.11.6",
    "@types/cross-spawn": "^6.0.1",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/superagent": "^4.1.7",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "apollo-link-http": "^1.5.15",
    "babel-loader": "^8.1.0",
